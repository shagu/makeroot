#!/bin/bash

# load recipe informations
source recipes/$RECIPE
source distros/$DISTRO

echo
echo "##"
echo "# RECIPE: $RECIPE"
echo "# DISTRO: $DISTRO"
echo "#"
echo

# load build core
source core/config
source core/variables
source core/helpers

# prepare target dir
mkdir -p $ROOTFS_DIR
mkdir -p $LOG_DIR

# clean old logs
rm -f $LOGS_DIR/*.log

if [ ! -f $ROOTFS_DIR/bin/bash ]; then
  # prepare distro
  echo "-> do_distro"
  do_distro >> $LOG_DIR/do_distro.log
fi

# prepare chroot
trap do_umount EXIT
do_mount

# move specified files into rootfs
do_files

# run build steps
for step in $build_steps; do
  # only run existing functions
  if declare -f $step &> /dev/null; then
    run $step
  fi
done

exit 0
